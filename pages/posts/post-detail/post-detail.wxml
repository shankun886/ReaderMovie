<view class='container'>
  <image src="{{postData.headImgSrc}}" class='head-image'></image>
  <image src="/images/music/music-start.png" class='audio'></image>
  <view class='author-date'>
    <image src="{{postData.avatar}}"class='avatar'></image>
    <text class='author'>{{postData.author}}</text>
    <text class='const-text'>发表于</text>
    <text class='date'>{{postData.dateTime}}</text>
  </view>
  <text class='title'>{{postData.title}}</text>
  <view class='tool'>
    <view class='circle-img'>
      <image src='/images/icon/collection.png'></image>
      <image src='/images/icon/share.png' class='share-img'></image>
    </view>
    <view class='horizon'></view>
  </view>
  <text class='detail'>{{postData.detail}}</text>
</view>